{
    "extends": "airbnb",

    "env": {
        "browser": true,
        "node": true,
        "es6": true,
        "amd": true,
        "mocha": true
    },

    "parser": "babel-eslint",

    "ecmaFeatures": {
        "jsx" : true,
        "regexYFlag": true,
        "regexUFlag": true
    },

    "rules": {
        "strict": [2, "function"],
        "quotes": [2, "single", "avoid-escape"],
        "indent": [2, 4],
        "no-console": 0,
        "no-loop-func": 0,
    }
}
